doctype html
html(lang='en', ng-app='dating-app')
  head
    meta(charset='utf-8')      
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Pied Piper
    script(src='/vendor/angular/angular.js')
    link(rel='stylesheet', href='/vendor/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,600,300,800', rel='stylesheet', type='text/css')
    link(ng-if='!user.gender', rel='stylesheet', href='/login.css')
    link(ng-if='user.gender', rel='stylesheet', href='/index.css')
    link(rel='shortcut icon', href='/favicon.ico')

  body.ng-cloak(ng-cloak)
    .container-fluid
      div(ng-if='user.gender')
        include ./views/nav/topnav
    .container
      .row
        .col-md-3(ng-if='user.gender')
          include ./views/nav/nav
        .col-md-9
          div(ui-view)

    script(src='/vendor/jquery/dist/jquery.js')
    script(src='/vendor/angular-messages/angular-messages.js')
    script(src='/vendor/angular-ui-router/release/angular-ui-router.js')
    script(src='/vendor/angular-sanitize/angular-sanitize.min.js')
    script(src='/vendor/lodash/lodash.js')
    script(src='/vendor/moment/moment.js')
    script(src='/vendor/angular-moment/angular-moment.js')
    script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
    script(src='/vendor/satellizer/satellizer.js')
    script(src='/vendor/ng-file-upload/angular-file-upload-shim.min.js')
    script(src='/vendor/ng-file-upload/angular-file-upload.min.js')
    script(src='https://checkout.stripe.com/checkout.js')
    script(src='/index.js')
