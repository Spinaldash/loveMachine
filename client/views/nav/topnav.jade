nav.navbar.navbar-default.navbar-fixed-top(ng-controller='TopNavCtrl')  .container    .row      .col-md-2.text-center        .navbar-header          button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")            span.sr-only Toggle navigation            span.icon-bar            span.icon-bar            span.icon-bar          a.navbar-brand(ui-sref='home'): i(style='margin-top: -8px;').fa.fa-pied-piper.fa-2x      .col-md-8        .form-group(style='padding-top: 8px; margin-bottom: 0px;')          .input-group            input.form-control(type='text', placeholder='Search for people')            .input-group-btn              button.btn.btn-default(type='button', ng-click='search(input)') Go!                .col-md-2        #navbar.collapse.navbar-collapse          ul.nav.navbar-nav.navbar-right(ng-if='user')            li.dropdown              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false') {{user.realname}} &nbsp;                span.caret              ul.dropdown-menu(role='menu')                li: a(ui-sref='account.profile') Profile                li: a(href='#', ng-click='logout()') Log Out